@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container-fluid d-flex flex-column align-items-center justify-content-center mt-5">
    <h2 class="mb-4">Đăng nhập</h2>

    <form asp-action="Login" method="post" class="p-5 border rounded-4 shadow bg-white" style="min-width: 350px;">
        <div class="mb-4">
            <label for="username" class="form-label">Tên đăng nhập</label>
            <input type="text" class="form-control" id="username" name="username" required />
        </div>
        <div class="mb-4">
            <label for="password" class="form-label">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password" required />
        </div>
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <button type="submit" class="btn btn-danger w-100 mb-3">Đăng nhập</button>

        <div class="d-flex justify-content-between align-items-center">
            <a href="/Account/ForgotPassword" class="btn btn-link p-0">Quên mật khẩu?</a>
            <a href="/Account/Register" class="btn btn-outline-danger btn-sm">Đăng ký</a>
        </div>
    </form>
</div>


@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}
